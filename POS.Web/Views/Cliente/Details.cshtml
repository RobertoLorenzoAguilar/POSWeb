@model ClienteViewModel


<div class=" card text-primary">
    <div class=" card-header text-center ">
        <h5>Cliente</h5>
    </div>
    <div class=" card-body ">
        <dl class="row">
            <dt class="col-sm-2 text-center text-dark">
                Nombre Cliente
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreCliente)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Apellido Paterno
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApellidoPaterno)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Apellido Materno
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApellidoMaterno)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                RFC
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RfcCliente)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Calle
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CalleDireccionCliente)

            </dd>
            <dt class="col-sm-2 text-center text-dark">
                Número
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumeroDirecionCiente)

            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Número
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumeroDirecionCiente)

            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Tipo de Cliente
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoCliente)
            </dd>
            <dt class="col-sm-2 text-center text-dark">
                Descuento
            </dt>
            <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descuento)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Empresa
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RazonSocialEmpresa)
            </dd>
            <dt class="col-sm-2 text-center text-dark">
                Asesor
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoUsuario)
            </dd>
        </dl>
    </div>
    <div class=" card-footer text-center">
        <a asp-action="Edit" asp-route-id="@Model.IdCliente" class="btn btn-outline-warning btn-sm">Editar</a>
        <a asp-action="Index" class=" btn btn-outline-success btn-sm">volver a la lista</a>
    </div>
</div>
