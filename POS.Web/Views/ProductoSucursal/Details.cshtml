@model EmpleadoViewModel


<div class=" card text-primary">
    <div class=" card-header text-center ">
        <h5>Empleado</h5>
    </div>
    <div class=" card-body ">
        <dl class="row">
            <dt class="col-sm-2 text-center text-dark">
                Nombre Empleado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreEmpleado)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Apellido Paterno
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApellidoPaterno)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Apellido Materno
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApellidoMaterno)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Usuario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsuarioSistema)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Contraseña
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContrasenaSistema)

            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Número Seguro Social
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nss)
            </dd>
            <dt class="col-sm-2 text-center text-dark">
                Empresa
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoUsuario)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Sucursal
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreSucursal)
            </dd>


        </dl>
    </div>
    <div class=" card-footer text-center">
        <a asp-action="Edit" asp-route-id="@Model.IdSucursal" class="btn btn-outline-warning btn-sm">Editar</a>
        <a asp-action="Index" class=" btn btn-outline-success btn-sm">volver a la lista</a>
    </div>
</div>
