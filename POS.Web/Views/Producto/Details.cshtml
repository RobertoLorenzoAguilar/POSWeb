@model ProductoViewModel


<div class=" card text-primary">
    <div class=" card-header text-center ">
        <h5>Producto</h5>
    </div>
    <div class=" card-body ">
        <dl class="row">
            <dt class="col-sm-2 text-center text-dark">
                Nombre Producto
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreProducto)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Descripción Producto
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DescripcionProducto)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Tipo Producto
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoProducto)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Porcentaje
            </dt>


            <dt class="col-sm-2 text-center text-dark">
                ¿Tiene Impuesto?
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TieneImpuesto)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                Tipo Impuesto
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoImpuesto)
            </dd>
            <dt class="col-sm-2 text-center text-dark">
                Retención
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Retencion)
            </dd>
            <dt class="col-sm-2 text-center text-dark">
                Traslado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Traslado)
            </dd>

        </dl>
    </div>
    <div class=" card-footer text-center">
        <a asp-action="Edit" asp-route-id="@Model.IdProducto" class="btn btn-outline-warning btn-sm">Editar</a>
        <a asp-action="Index" class=" btn btn-outline-success btn-sm">volver a la lista</a>
    </div>
</div>
