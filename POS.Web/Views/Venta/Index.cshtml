@model IEnumerable<VentaViewModel>

<div class="card text-primary">
    <div class="card-header text-center">
        <h5>Lista de Ventas</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a asp-action="Create" class="btn btn-outline-primary btn-sm">Crear Nuevo</a>
                        <hr />
                        <h5 class="panel-title">Ventas</h5>
                    </div>
                    <div class="panel-body">
                        <table class="table table-hover table-responsive table-striped" id="MyTable">
                            <thead>
                                <tr>
                                    <th>
                                        RFC Cliente
                                    </th>
                                    <th>
                                       Empleado
                                    </th>
                                    <th>
                                        Tipo Venta
                                    </th>
                                    <th>
                                        Sucursal
                                    </th>
                                    <th>
                                        Total
                                    </th>
                                    <th>
                                        Detalles
                                    </th>

                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RfcCliente)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UsuarioEmpleado)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TipoVenta)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombreSucursal)
                                        </td>                                        
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TotalVenta)
                                        </td>
                                        <td>
                                            <a asp-action="" asp-route-id="@item.IdVenta" class="btn btn-outline-success" btn-sm">Ver</a>

                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdVenta" class="btn btn-outline-warning btn-sm">Editar</a>
                                            <a asp-action="Details" asp-route-id="@item.IdVenta" class="btn btn-outline-info btn-sm">Detalles</a>
                                            <a asp-action="Delete" asp-route-id="@item.IdVenta" class="btn btn-outline-danger btn-sm">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-muted text-center">
        Crud Venta
    </div>
</div>